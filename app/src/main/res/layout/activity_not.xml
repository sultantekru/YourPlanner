<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8A2C8"
    tools:context=".NotActivity" >

    <EditText
        android:id="@+id/edittext_notarama"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/AramaCubuguBosluklari"
        android:layout_marginTop="@dimen/AramaCubuguBosluklari"
        android:layout_marginEnd="@dimen/AramaCubuguBosluklari"
        android:background="@color/aramacubugu"
        android:ems="10"
        android:hint="@string/notarama"
        android:inputType="textPersonName"
        android:paddingLeft="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_notarama"
        app:layout_constraintStart_toStartOf="@+id/edittext_notarama"
        app:layout_constraintTop_toTopOf="@+id/edittext_notarama"
        app:srcCompat="@drawable/searching_icon" />

    <ImageView
        android:id="@+id/img_notadd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/EklemeAltBosluk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/add_icon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notlar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/RecyleViewSagBosluk"
        android:layout_marginTop="@dimen/RecycleViewUstBosluk"
        android:layout_marginEnd="@dimen/RecyleViewSolBosluk"
        android:layout_marginBottom="@dimen/RecyleViewAltBosluk"
        app:layout_constraintBottom_toTopOf="@+id/img_notadd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_notarama" />
</androidx.constraintlayout.widget.ConstraintLayout>